# Go application Nginx config example
# Supports both:
# - Go binary running on port (proxy_pass to localhost:8080)
# - Go serving static files directly (root to public/ or static/)
# Placeholders: {DOMAIN}, {ROOT_PATH}, {FOLDER_NAME}

server {
    listen 80;
    listen [::]:80;

    server_name {DOMAIN} www.{DOMAIN};

    # Dynamic log files per project
    access_log /var/log/nginx/{FOLDER_NAME}.access.log;
    error_log  /var/log/nginx/{FOLDER_NAME}.error.log;

    index index.html;

    # Gzip compression for better performance
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css application/javascript text/xml application/xml application/rss+xml application/atom+xml image/svg+xml;

    # Cache static assets (images, JS, CSS, fonts...)
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot|pdf|zip|gz)$ {
        expires 30d;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Proxy to Go binary (if Go app listens on port, e.g. 8000)
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Deny access to hidden files (security)
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Security headers
    add_header X-Content-Type-Options nosniff;
    add_header X-Frame-Options DENY;
    add_header X-XSS-Protection "1; mode=block";
    add_header Referrer-Policy "strict-origin-when-cross-origin";

    # SSL block (uncommented by script if SSL is used)
    # listen 443 ssl http2;
    # listen [::]:443 ssl http2;
    #
    # ssl_certificate     {SSL_CERT_PATH};
    # ssl_certificate_key {SSL_KEY_PATH};
    #
    # # Recommended SSL settings
    # ssl_protocols TLSv1.2 TLSv1.3;
    # ssl_ciphers HIGH:!aNULL:!MD5;
    # ssl_prefer_server_ciphers on;
    # ssl_session_cache shared:SSL:10m;
    # ssl_session_timeout 10m;
    #
    # # Redirect HTTP to HTTPS
    # if ($scheme = http) {
    #     return 301 https://$server_name$request_uri;
    # }
}
